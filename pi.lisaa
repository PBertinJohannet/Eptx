import string

fn main(){
	num vals = 0;
	num total = 0;
	while 1 {
		num x = rand();
		num y = rand();
		num dist = x*x + y*y;
		if dist < 1 total = total + 1;
		vals = vals+1;
		if vals % 5000000 == 0{
		    ("pi is " + (4*total/vals).toString() + " \t n : "+vals.toString()+"\n").print();
		}
	}
}
